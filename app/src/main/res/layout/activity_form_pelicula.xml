<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Form_pelicula">

        <TextView
            android:id="@+id/titulo_formulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Insertar Película"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/directores" />

        <EditText
            android:id="@+id/genero"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/generos"
            app:layout_constraintTop_toBottomOf="@+id/anos" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="33dp"
            android:text="Registrar película"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/Sipnosis" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directores"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/directores"
            app:layout_constraintEnd_toEndOf="@+id/ano"
            app:layout_constraintStart_toEndOf="@+id/ano" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Palabras claves:"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/Palabras_claves"
            app:layout_constraintStart_toStartOf="@+id/guideline2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:text="Sipnosis:"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/Sipnosis"
            app:layout_constraintEnd_toEndOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Titulo:"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <EditText
            android:id="@+id/Actores"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="104dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/genero"
            app:layout_constraintTop_toBottomOf="@+id/ano" />

        <EditText
            android:id="@+id/Palabras_claves"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/Actores" />

        <EditText
            android:id="@+id/Sipnosis"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/Palabras_claves" />

        <android.support.constraint.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="74dp" />

        <TextView
            android:id="@+id/ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Año:"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/generos"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/actores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actores"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/Actores"
            app:layout_constraintStart_toStartOf="@+id/generos" />

        <TextView
            android:id="@+id/generos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:text="Género"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/genero"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/directores"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/nombre" />

        <EditText
            android:id="@+id/anos"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/ano"
            app:layout_constraintEnd_toEndOf="@+id/genero"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/genero" />

</android.support.constraint.ConstraintLayout>
